<?xml version="1.0"?>
<config>
   <sections>
        <sales>
        	<groups>
                <promotion translate="label" module="promotion">
                    <label>Iuvo Promotion</label>
                    <sort_order>680</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <use_price translate="label">
                            <label>Use Discount Amount for deducting price from quote? (if no then custom price will be used)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </use_price>
                        <remove_item translate="label">
